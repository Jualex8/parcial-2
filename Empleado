package principal;

import java.util.Scanner;

/**
 *
 * @author Janus
 */
public class Empleado {
public String nombre;
    public double tarifaHora;
    public int[] horas; 
    
    private static final String[] DIAS = {"Lunes", "Martes", "Mi√©rcoles", "Jueves", "Viernes"};

    public Empleado(String nombre, double tarifaHora, int[] horas) {
        this.nombre = nombre;
        this.tarifaHora = tarifaHora;
        this.horas = horas;
    }

    public int calcularHoras() {
        int total = 0;
        for (int h : horas) {
            total += h;
        }
        return total;
    }

    public double calcularSalario() {
        return calcularHoras() * tarifaHora;
    }

    public static double totalEmpresa(Empleado[] empleados) {
        double total = 0;
        for (Empleado e : empleados) {
            total += e.calcularSalario();
        }
        return total;
    }

    
    public String diaMasTrabajo() {
        int max = horas[0];
        int index = 0;
        for (int i = 1; i < horas.length; i++) {
            if (horas[i] > max) {
                max = horas[i];
                index = i;
            }
        }
        return DIAS[index] + " con " + max + " horas";
    }

   
    public String diaMenosTrabajo() {
        int min = horas[0];
        int index = 0;
        for (int i = 1; i < horas.length; i++) {
            if (horas[i] < min) {
                min = horas[i];
                index = i;
            }
        }
        return DIAS[index] + " con " + min + " horas";
}  
}
