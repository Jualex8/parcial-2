package principal;

/**
 *
 * @author Janus
 */
public class Producto {
public String nombre;
public double precio;
public int stock;

    public Producto(String nombre, double precio, int stock) {
        this.nombre = nombre;
        this.precio = precio;
        this.stock = stock;
    }

public int añadir(int añadir){
    if(añadir > 0){
        stock+=añadir;
    }
    return stock;
}
public int retirar(int añadir){
    if(añadir > 0){
        stock-=añadir;
    }
    return stock;
}

public String info(){
    return "nombre" + nombre + "precio" + precio + "stock" + stock;
}
}

