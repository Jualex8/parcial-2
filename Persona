package principal;

/**
 *
 * @author Janus
 */

public class Persona {
 public String nombre;
 public String apellido;
 public long documento;

    public Persona(String nombre, String apellido, long documento) {
        this.nombre = nombre;
        this.apellido = apellido;
        this.documento = documento;
    }
 
 public long getDocumento(){
     return documento;
 }
 
 public boolean verificarDocumento(){
     return documento >= 1000000000;
 }
 
 public static int cantidadDocumentos(Persona[] personas){
     int contador = 0;
     for(Persona p : personas){
         if(p.verificarDocumento()){
             contador++;
         }
     }
     return contador;
 }
  
}
